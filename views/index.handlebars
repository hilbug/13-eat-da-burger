<!-- Header, Description, Today's Date, Time -->
<header class="container text-center full-section d-flex justify-content-center align-items-center">
    <div class="row">
        <div class="col-12 text-center">
            <img class="logo img-fluid" src="../assets/img/website_logo_transparent_background.png"
                alt="eat-da-burger logo">
            <p class="lead red-text font-weight-lighter">The burger logger you didn't know you needed</p>
            {{!-- Form box --}}
            <h4 class="org-text">Which burgers do you want to try?</h4>
            <form class="create-form">
                <div class="form-group">
                    <label class="red-text" for="burg">Enter a name for your burger here:</label>
                    <textarea required class="form-control form-control-lg w-50 mx-auto" id="burg" rows="2"
                        name="burger-name"></textarea>
                </div>
                {{!-- Submitt button --}}
                <button class="btn btn-outline-secondary red-text mb-3" type="submit">Add Your Burger</button>
            </form>
            {{!-- End Form --}}
            <a href="#burger-log"><i class="fas fa-chevron-down red-text"></i></a>
        </div>
    </div>
</header>


{{!-- Container --}}
<div class="container">
    {{!-- Burgers Row --}}
    <section id="burger-log" class="full-section">
        <div class="row">
            <div class="col-md-12">
                <h2 class="text-center red-text pb-3">Burger Log</h2>
                <div class="row">
                    {{!-- to be devoured--}}
                    <div class="col-md-6">
                        <h3 class="text-center org-text">Try Me!</h3>
                        <ul class="pl-0">
                            {{#each burgersNotDevoured}}
                            {{> burgers/burgerNotDevoured-block}}
                            {{/each}}
                        </ul>
                    </div>
                    {{!-- devoured --}}
                    <div class="col-md-6">
                        <h3 class="text-center org-text">Tried and True!</h3>
                        <ul class="pl-0">
                            {{#each burgersDevoured}}
                            {{> burgers/burgerDevoured-block}}
                            {{/each}}
                        </ul>
                    </div>
                </div>
                <div class="text-center">
                    <a href="#burger-video">
                        <i class="fas fa-chevron-down red-text"></i>
                    </a>
                </div>
            </div>
            {{!-- End Burger Row --}}
        </div>
    </section>

    {{!-- Inspiration Row --}}
    <section id="burger-video" class="semi-section">
        <div class="row mt-5 pb-5">
            <div class="col-12 text-center">
                <h2 id="burg-video" class="org-text">Need some burger inspiration?</h2>
                <iframe width="560" height="315" src="https://www.youtube.com/embed/6tceQzEojng" frameborder="0"
                    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                    allowfullscreen></iframe>
            </div>
            {{!-- End Inspiration Row --}}
        </div>
    </section>
    {{!-- End Container --}}
</div>

{{!-- Footer --}}
<footer class="footer text-center p-2 mt-2 bg-gray">
